<project name="Sample Project" default="main" basedir=".">
    <description>A sample build file for this project</description>
    
    <!-- global properties for this build file -->
    <property name="source.dir" location="src"/>
    <property name="build.dir" location="bin"/>
    <property name="doc.dir" location="doc"/>
    <property name="lib.dir" location="libs"/>
    
    <junit printsummary="yes" haltonfailure="yes">
		<classpath id="master-classpath">
			<fileset dir="${lib.dir}">
				<include name="**/junit-4.13.1.jar" />
				<!-- <include name="**/hamcrest-core-1.3.jar" />  -->
			</fileset>
		</classpath>
	</junit>
    
    <!-- set up some directories used by this project -->
    <target name="init" description="setup project directories">
    <mkdir dir="${build.dir}"/>
    <mkdir dir="${doc.dir}"/>
    </target>
    
    <!-- Compile the java code in ${src.dir} into ${build.dir} -->
    <target name="compile">
		<javac srcdir="${source.dir}" destdir="${build.dir}" includeantruntime="false">
			<classpath refid="master-classpath" />
		</javac>
	</target>
    
    <!-- Generate javadocs for current project into ${doc.dir} -->
    <target name="doc" description="generate documentation">
    <javadoc sourcepath="${source.dir}" destdir="${doc.dir}">
    	<classpath refid="master-classpath" />
    </javadoc>
    </target>
    
    <!-- Delete the build & doc directories and Emacs backup (*~) files -->
    <target name="clean" description="tidy up the workspace">
    <delete dir="${build.dir}"/>
    <delete dir="${doc.dir}"/>
    <delete>
    
    <fileset defaultexcludes="no" dir="${source.dir}" includes="**/*~"/>
    </delete>
    </target>
    
    <target name = "main" depends = "clean, init, compile, doc"> </target>
    </project>
